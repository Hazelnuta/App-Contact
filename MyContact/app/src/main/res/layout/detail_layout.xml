<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.mycontact.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/detail_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/head1" />

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="122dp"
            android:text="Hazel"
            android:textColor="#000000"
            android:textSize="27dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/detail_fixed1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="155dp"
                android:text="Phone Number:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="180dp"
                android:text="131-6709-8515"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="15dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/line1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/detail_fixed2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="155dp"
                android:text="Address:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="180dp"
                android:text="Rd. Dongchuan 800"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="15dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/line2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp">

            <TextView
                android:id="@+id/detail_fixed3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="155dp"
                android:text="Notes:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/detail_notes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="180dp"
                android:text="Like her a lot :)"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="15dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/line2" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/send_button1"
        android:layout_width="221dp"
        android:layout_height="86dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:background="@drawable/add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/write_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="Write a text!"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/send_button1"
        app:layout_constraintEnd_toEndOf="@+id/send_button1" />

</android.support.constraint.ConstraintLayout>